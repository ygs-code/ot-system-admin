{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "src/*": [
                "src/*"
            ],
            // "@utils": [
            //     "utils/index"
            // ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "react"
        ],
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react-jsx", // 对于 TypeScript 4.x 和 React 17+
        "allowJs": true,
        "moduleResolution": "node",
    }
}